{
  "name": "hono-api",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./lib/api": {
      "types": "./dist/lib/api.d.ts",
      "default": "./dist/lib/api.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "infisical run --path=/hono-api -- tsx watch src/index.ts",
    "prebuild": "cd ../.. && bun run --filter=@repo/emails build",
    "build": "tsc && node scripts/fix-dist-extensions.js",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "TS_NODE_PROJECT=./tsconfig.drizzle.json infisical run --path=/hono-api -- drizzle-kit generate",
    "db:migrate": "TS_NODE_PROJECT=./tsconfig.drizzle.json infisical run --path=/hono-api -- drizzle-kit migrate",
    "db:seed": "infisical run --path=/hono-api -- bun run src/db/seeds/index.ts",
    "db:push": "TS_NODE_PROJECT=./tsconfig.drizzle.json infisical run --path=/hono-api -- drizzle-kit push",
    "db:studio": "TS_NODE_PROJECT=./tsconfig.drizzle.json infisical run --path=/hono-api -- drizzle-kit studio",
    "db:drop": "TS_NODE_PROJECT=./tsconfig.drizzle.json infisical run --path=/hono-api -- drizzle-kit drop",
    "test:cleanup": "infisical run --path=/hono-api -- tsx scripts/test-cleanup.ts",
    "cron:trial-ending": "infisical run --path=/hono-api -- tsx scripts/cron-trial-ending.ts",
    "cron:cleanup": "infisical run --path=/hono-api -- tsx scripts/cron-cleanup.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.5",
    "@react-email/render": "^2.0.4",
    "@repo/emails": "*",
    "@repo/types": "*",
    "@repo/ui": "*",
    "@t3-oss/env-core": "^0.13.8",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.7",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "resend": "^6.6.0",
    "stripe": "^17.4.0",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "typescript": "^5.8.3"
  }
}
