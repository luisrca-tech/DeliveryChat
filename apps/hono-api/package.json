{
  "name": "hono-api",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./lib/api": {
      "types": "./dist/lib/api.d.ts",
      "default": "./dist/lib/api.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- tsx watch src/index.ts",
    "dev:infisical": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- tsx watch src/index.ts",
    "check:secrets": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- env | grep -E '(DATABASE_URL|NODE_ENV)' || echo 'No secrets found. Make sure you are logged in: infisical login'",
    "list:folders": "infisical secrets list --env=${NODE_ENV:-dev} || echo 'Run: infisical login'",
    "create:folder": "echo 'To create the folder, run: infisical secrets set DATABASE_URL \"your-database-url\" --env=dev --path=/hono-api'",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:infisical": "infisical run --env=${NODE_ENV:-prod} --path=/hono-api -- node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- drizzle-kit generate",
    "db:migrate": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- drizzle-kit migrate",
    "db:push": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- drizzle-kit push",
    "db:studio": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- drizzle-kit studio",
    "db:drop": "infisical run --env=${NODE_ENV:-dev} --path=/hono-api -- drizzle-kit drop"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.5",
    "@repo/ui": "*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  }
}