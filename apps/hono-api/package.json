{
  "name": "hono-api",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./lib/api": {
      "types": "./dist/lib/api.d.ts",
      "default": "./dist/lib/api.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "infisical run --path=/hono-api -- tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "db:generate": "infisical run --path=/hono-api -- drizzle-kit generate",
    "db:migrate": "infisical run --path=/hono-api -- drizzle-kit migrate",
    "db:push": "infisical run --path=/hono-api -- drizzle-kit push",
    "db:studio": "infisical run --path=/hono-api -- drizzle-kit studio",
    "db:drop": "infisical run --path=/hono-api -- drizzle-kit drop"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.5",
    "@repo/types": "*",
    "@repo/ui": "*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.6",
    "drizzle-kit": "^0.31.7",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
  }
}