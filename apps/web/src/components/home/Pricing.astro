---
import { Button } from "@repo/ui/components/ui/button";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@repo/ui/components/ui/card";
import { Check } from "lucide-react";
import { plans } from "../../constants/pricing";
---

<section id="pricing" class="py-20 bg-muted/30">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center mb-16 space-y-4">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold">
        Simple, Transparent{" "}
        <span
          class="bg-linear-to-r from-primary to-primary-glow bg-clip-text text-transparent"
        >
          Pricing
        </span>
      </h2>
      <p class="text-lg text-muted-foreground">
        Choose the plan that's right for your business. All plans include a
        14-day free trial.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {
        plans.map((plan) => (
          <Card
            key={plan.name}
            className={`relative group hover:shadow-glow transition-all duration-300 border-border/50 bg-gradient-card ${
              plan.popular
                ? "border-primary/50 shadow-glow scale-105 md:scale-110"
                : ""
            }`}
            client:load
          >
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-gradient-hero rounded-full text-xs font-semibold text-primary-foreground">
                Most Popular
              </div>
            )}
            <CardHeader className="text-center pb-8" client:load>
              <CardTitle className="text-2xl font-bold mb-2" client:load>
                {plan.name}
              </CardTitle>
              <CardDescription className="text-sm mb-4" client:load>
                {plan.description}
              </CardDescription>
              <div class="flex items-baseline justify-center gap-2">
                {plan.price === "Custom" ? (
                  <span class="text-4xl font-bold">Custom</span>
                ) : (
                  <>
                    <span class="text-4xl font-bold">${plan.price}</span>
                    <span class="text-muted-foreground">/month</span>
                  </>
                )}
              </div>
            </CardHeader>
            <CardContent className="space-y-6" client:load>
              <ul class="space-y-4">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-3">
                    <Check
                      className="h-5 w-5 text-primary shrink-0 mt-0.5"
                      client:load
                    />
                    <span class="text-sm text-muted-foreground">{feature}</span>
                  </li>
                ))}
              </ul>
              <Button
                className="w-full"
                variant={plan.popular ? "default" : "outline"}
                size="lg"
                client:load
              >
                {plan.cta}
              </Button>
            </CardContent>
          </Card>
        ))
      }
    </div>
  </div>
</section>
