{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NODE_ENV", "DATABASE_URL", "PORT", "SKIP_ENV_VALIDATION"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": ["NODE_ENV", "DATABASE_URL", "PORT", "SKIP_ENV_VALIDATION"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DEV"]
    }
  }
}
