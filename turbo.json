{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["VERCEL", "VERCEL_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "env": [
        "NODE_ENV",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "RESEND_API_KEY",
        "RESEND_EMAIL_TO",
        "EMAIL_FROM",
        "ALLOWED_ORIGINS",
        "STRIPE_SECRET_KEY",
        "SIGNING_STRIPE_SECRET_KEY",
        "STRIPE_BASIC_PRICE_KEY",
        "STRIPE_PREMIUM_PRICE_KEY",
        "STRIPE_ENTERPRISE_PRODUCT_KEY",
        "STRIPE_AUTOMATIC_TAX_ENABLED",
        "VITE_API_URL",
        "VITE_RESEND_EMAIL_TO"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "PORT",
        "SKIP_ENV_VALIDATION",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "RESEND_API_KEY",
        "RESEND_EMAIL_TO",
        "EMAIL_FROM",
        "ALLOWED_ORIGINS",
        "STRIPE_SECRET_KEY",
        "SIGNING_STRIPE_SECRET_KEY",
        "STRIPE_BASIC_PRICE_KEY",
        "STRIPE_PREMIUM_PRICE_KEY",
        "STRIPE_ENTERPRISE_PRODUCT_KEY",
        "DEV",
        "VERCEL_ENV"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "PORT",
        "SKIP_ENV_VALIDATION",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "RESEND_API_KEY",
        "RESEND_EMAIL_TO",
        "EMAIL_FROM",
        "ALLOWED_ORIGINS",
        "STRIPE_SECRET_KEY",
        "SIGNING_STRIPE_SECRET_KEY",
        "STRIPE_BASIC_PRICE_KEY",
        "STRIPE_PREMIUM_PRICE_KEY",
        "STRIPE_ENTERPRISE_PRODUCT_KEY",
        "DEV",
        "VERCEL_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "PORT",
        "SKIP_ENV_VALIDATION",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "RESEND_API_KEY",
        "RESEND_EMAIL_TO",
        "EMAIL_FROM",
        "ALLOWED_ORIGINS",
        "STRIPE_SECRET_KEY",
        "SIGNING_STRIPE_SECRET_KEY",
        "STRIPE_BASIC_PRICE_KEY",
        "STRIPE_PREMIUM_PRICE_KEY",
        "STRIPE_ENTERPRISE_PRODUCT_KEY",
        "DEV",
        "VERCEL_ENV"
      ]
    }
  }
}
